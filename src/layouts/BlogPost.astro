---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'product' | 'marketing'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				padding-top: var(--header-height);
			}
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				padding: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 720px;
				margin: 2em auto 0;
				padding: 0 1em;
				box-sizing: border-box;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				width: 100%;
				height: auto;
				max-height: 360px;
				object-fit: cover;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
				color: #595959;
				font-size: 14.6667px;
				line-height: 1.6;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: #111;
				font-weight: 500;
				font-size: 2em;
			}
			.prose :global(h2) {
				color: #111;
				font-size: 17.6px;
				font-weight: 500;
				margin: 2em 0 0.75em;
				line-height: 1.2;
			}
			p, ul {
				margin-bottom: 1.5em;
			}
			ul {
				padding-left: 1.2em;
			}
			.date {
				margin-bottom: 0.5em;
				color: #787878;
				font-size: 14.6667px;
			}
			.last-updated-on {
				font-style: italic;
			}
			@media (max-width: 720px) {
				.hero-image {
					margin-top: 1em;
				}
				.prose {
					padding-top: 1.5em;
				}
			}
			.container {
				max-width: 750px;
				margin: 0 auto;
				padding: 0 1.5em;
				width: 100%;
				box-sizing: border-box;
			}
			.prose :global(.hover-orange) {
				transition: color 0.2s ease;
				cursor: pointer;
			}
			.prose :global(.hover-orange:hover) {
				color: #F48120;
			}
			.prose :global(.centered-image) {
				display: flex;
				justify-content: center;
				margin: 2em 0;
			}
			.prose :global(.centered-image img) {
				max-width: 100%;
				height: auto;
				border-radius: 4px;
			}
			.prose :global(.visual-map) {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
				gap: 1rem;
				margin: 2em 0;
			}
			.prose :global(.visual-item) {
				position: relative;
				border-radius: 4px;
				overflow: hidden;
				aspect-ratio: 16/9;
				cursor: pointer;
			}
			.prose :global(.visual-item img) {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: filter 0.3s ease;
			}
			.prose :global(.visual-item:hover img) {
				filter: blur(4px) brightness(0.7);
			}
			.prose :global(.visual-overlay) {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 100%;
				padding: 1rem;
				color: white;
				font-size: 16px;
				text-align: center;
				opacity: 0;
				transition: opacity 0.3s ease;
				pointer-events: none;
			}
			.prose :global(.visual-item:hover .visual-overlay) {
				opacity: 1;
			}
			.prose :global(.modal) {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(0, 0, 0, 0.9);
				display: none;
				justify-content: center;
				align-items: center;
				z-index: 1000;
				padding: 2rem;
				box-sizing: border-box;
			}
			.prose :global(.modal.active) {
				display: flex;
			}
			.prose :global(.modal-content) {
				max-width: 90%;
				max-height: 90vh;
				display: flex;
				flex-direction: column;
				background: white;
				border-radius: 8px;
				overflow: hidden;
			}
			.prose :global(.modal-image) {
				width: 100%;
				height: auto;
				max-height: 70vh;
				object-fit: contain;
			}
			.prose :global(.modal-description) {
				padding: 1.5rem;
				background: white;
				color: #111;
				font-size: 16px;
				line-height: 1.6;
			}
			.prose :global(.modal-close) {
				position: absolute;
				top: 1rem;
				right: 1rem;
				color: white;
				font-size: 2rem;
				cursor: pointer;
				background: none;
				border: none;
				padding: 0.5rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							{typeof pubDate === 'string' ? (
								<FormattedDate season={pubDate} />
							) : (
							<FormattedDate date={pubDate} />
							)}
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<div class="container">
			<Footer />
		</div>
	</body>
</html>

<script>
	// Find the text and wrap it in a span
	document.addEventListener('DOMContentLoaded', () => {
		const learningsSection = document.querySelector('.prose');
		if (!learningsSection) return;

		const targetPhrases = [
			'Be curious to learn and grow',
			'Get your work across the finish line & communicate clearly'
		];

		let content = learningsSection.innerHTML;
		targetPhrases.forEach(phrase => {
			const regex = new RegExp(`(${phrase})`, 'g');
			content = content.replace(regex, '<span class="hover-orange">$1</span>');
		});

		learningsSection.innerHTML = content;
	});

	document.addEventListener('DOMContentLoaded', () => {
		const visualItems = document.querySelectorAll('.visual-item');
		let modal = document.querySelector('.modal');
		
		// Create modal if it doesn't exist
		if (!modal) {
			modal = document.createElement('div');
			modal.className = 'modal';
			modal.innerHTML = `
				<button class="modal-close">&times;</button>
				<div class="modal-content">
					<img class="modal-image" src="" alt="">
					<div class="modal-description"></div>
				</div>
			`;
			document.body.appendChild(modal);
		}

		const modalImage = modal.querySelector('.modal-image');
		const modalDescription = modal.querySelector('.modal-description');
		const closeButton = modal.querySelector('.modal-close');

		visualItems.forEach(item => {
			item.addEventListener('click', () => {
				const img = item.querySelector('img');
				const description = item.getAttribute('data-description');
				
				modalImage.src = img.src;
				modalDescription.textContent = description;
				modal.classList.add('active');
				document.body.style.overflow = 'hidden';
			});
		});

		// Close modal when clicking close button or outside
		modal.addEventListener('click', (e) => {
			if (e.target === modal || e.target === closeButton) {
				modal.classList.remove('active');
				document.body.style.overflow = '';
			}
		});

		// Close modal with escape key
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && modal.classList.contains('active')) {
				modal.classList.remove('active');
				document.body.style.overflow = '';
			}
		});
	});
</script>
