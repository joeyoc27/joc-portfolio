---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import VisualModal from '../components/VisualModal.astro';

type Props = CollectionEntry<'product' | 'marketing'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				padding-top: var(--header-height);
			}
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				padding: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 720px;
				margin: 2em auto 0;
				padding: 0 1em;
				box-sizing: border-box;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				width: 100%;
				height: auto;
				max-height: 360px;
				object-fit: cover;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
				color: #595959;
				font-size: 14.6667px;
				line-height: 1.6;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: #111;
				font-weight: 500;
				font-size: 2em;
			}
			.description {
				color: #595959;
			}
			.prose :global(h2) {
				color: #111;
				font-size: 17.6px;
				font-weight: 500;
				margin: 2em 0 0.75em;
				line-height: 1.2;
			}
			p, ul {
				margin-bottom: 1.5em;
			}
			ul {
				padding-left: 1.2em;
			}
			.date {
				margin-bottom: 0.5em;
				color: #787878;
				font-size: 14.6667px;
			}
			.last-updated-on {
				font-style: italic;
			}
			@media (max-width: 720px) {
				.hero-image {
					margin-top: 1em;
				}
				.prose {
					padding-top: 1.5em;
				}
			}
			.container {
				max-width: 750px;
				margin: 0 auto;
				padding: 0 1.5em;
				width: 100%;
				box-sizing: border-box;
			}
			.prose :global(.hover-orange) {
				transition: color 0.2s ease;
				cursor: pointer;
			}
			.prose :global(.hover-orange:hover) {
				color: #F48120;
			}
			.prose :global(.centered-image) {
				display: flex;
				justify-content: center;
				margin: 2em 0;
			}
			.prose :global(.centered-image img) {
				max-width: 100%;
				height: auto;
				border-radius: 4px;
			}
			.prose :global(.visual-map) {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
				gap: 1rem;
				margin: 2em 0;
			}
			.prose :global(.visual-item) {
				position: relative;
				border-radius: 4px;
				overflow: hidden;
				aspect-ratio: 16/9;
				cursor: pointer;
			}
			.prose :global(.visual-item img) {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: filter 0.3s ease;
			}
			.prose :global(.visual-item:hover img) {
				filter: blur(4px) brightness(0.7);
			}
			.prose :global(.visual-overlay) {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 100%;
				padding: 1rem;
				color: white;
				font-size: 16px;
				text-align: center;
				opacity: 0;
				transition: opacity 0.3s ease;
				pointer-events: none;
			}
			.prose :global(.visual-item:hover .visual-overlay) {
				opacity: 1;
			}
		</style>
	</head>

	<body>
		<div class="container">
			<Header />
		</div>
		<main>
			<article>
				{heroImage && <div class="hero-image">
					<img width={720} height={360} src={heroImage} alt="" />
				</div>}
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<p class="description">{description}</p>
					</div>
					<slot />
				</div>
			</article>
		</main>
		<div class="container">
			<Footer />
		</div>
		<VisualModal />
	</body>
</html>

