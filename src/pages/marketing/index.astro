---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = await getCollection('marketing');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Marketing | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.container {
				max-width: 750px;
				margin: 0 auto;
				padding: 0 1.5em;
				width: 100%;
				box-sizing: border-box;
			}
		</style>
	</head>
	<body>
		<Header />
		<div class="container">
			<main>
				<section>
					<ul>
						{
							posts.map((post) => (
								<li>
									<a href={`/marketing/${post.slug}/`}>
										{post.data.heroImage && (
											<div class="img-container">
												<img width={720} height={360} src={post.data.heroImage} alt="" />
											</div>
										)}
										<h4 class="title">{post.data.title}</h4>
										<p class="date">{post.data.pubDate}</p>
									</a>
								</li>
							))
						}
					</ul>
				</section>
			</main>
		</div>
		<Footer />
		<style>
			main {
				margin-top: 8em;
				width: 100%;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 2rem;
			}
			.img-container {
				width: 100%;
				display: flex;
				justify-content: center;
				margin-bottom: 0.75rem;
			}
			ul li img {
				border-radius: 12px;
				width: 100%;
				height: auto;
				object-fit: cover;
			}
			ul li:first-child .img-container {
				margin-bottom: 1rem;
			}
			ul li:first-child img {
				max-width: 720px;
			}
			ul li:first-child .title {
				font-size: 1.8rem;
			}
			ul li a {
				display: block;
				text-decoration: none;
				color: #111;
			}
			.title {
				margin: 0;
				color: #111;
				line-height: 1.3;
				font-size: 1.1rem;
				font-weight: 400;
				margin-bottom: 0.25rem;
			}
			.date {
				margin: 0;
				color: #787878;
				font-size: 0.9rem;
				font-weight: 400;
			}
			ul li a:hover h4 {
				color: #0433ff;
			}
			ul li a:hover img {
				box-shadow: 0 4px 20px -8px rgba(0,0,0,.15);
			}
			@media (max-width: 720px) {
				main {
					margin-top: 6em;
				}
				ul {
					gap: 2.5em;
				}
				ul li {
					width: 100%;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.1rem;
				}
				.title {
					font-size: 1.1rem;
				}
				.date {
					font-size: 0.9rem;
				}
				.img-container {
					margin-bottom: 0.5rem;
				}
			}
		</style>
	</body>
</html> 