---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <div class="container">
    <nav>
      <div class="site-title">
        <a href="/">Joey O'Connor</a>
      </div>
      <div class="nav-links">
        <a href="/blog">Product</a>
        <a href="/about">Marketing</a>
      </div>
    </nav>
  </div>
</header>
<style>
	header {
		border-bottom: 1px solid #eee;
		background: #fff;
		padding: 1em 0;
		width: 100%;
	}
	nav {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		gap: 1.5em;
		padding: 0;
		height: 100%;
	}
	.site-title a {
		font-size: 16px;
		color: #111;
		text-decoration: none;
		font-weight: 500;
		letter-spacing: 0;
		line-height: 1;
	}
	.nav-links {
		display: flex;
		gap: 1.5em;
		line-height: 1;
	}
	.nav-links a {
		color: #111;
		text-decoration: none;
		font-weight: 400;
		font-size: 16px;
		transition: color 0.2s;
	}
	.nav-links a:hover, .nav-links a.active {
		color: #0433ff;
	}
	@media (max-width: 700px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5em;
		}
		.site-title {
			margin-bottom: 0.5em;
		}
		.nav-links {
			flex-direction: row;
			gap: 2em;
			width: 100%;
		}
	}
</style>
