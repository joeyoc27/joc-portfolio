---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="site-title">
			<a href="/">Joey O'Connor</a>
		</div>
		<div class="nav-links">
			<a href="/blog">Product</a>
			<a href="/about">Marketing</a>
		</div>
	</nav>
</header>
<style>
	header {
		border-bottom: 1px solid #eee;
		background: #fff;
		padding: 0.5em 0;
	}
	nav {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1em;
		gap: 2em;
	}
	.site-title a {
		font-size: 1.1em;
		color: #111;
		text-decoration: none;
		font-weight: 400;
		letter-spacing: 0.01em;
	}
	.nav-links {
		display: flex;
		gap: 2em;
	}
	.nav-links a {
		color: #111;
		text-decoration: none;
		font-weight: 400;
		transition: color 0.2s;
	}
	.nav-links a:hover, .nav-links a.active {
		color: #f38020;
	}
	@media (max-width: 700px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5em;
		}
		.site-title {
			margin-bottom: 0.5em;
		}
		.nav-links {
			flex-direction: row;
			gap: 2em;
			width: 100%;
		}
	}
</style>
